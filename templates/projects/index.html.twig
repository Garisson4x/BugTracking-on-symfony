{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block body %}
  <div class="container">
    <h1>Projects</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>creator</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.creator.name }}</td>
                <td>
                    <a href="{{ path('projects_show', {'id': project.id}) }}">show</a>
                    {% if app.user.id == project.creator.id %}
                    <a href="{{ path('projects_edit', {'id': project.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('projects_new') }}">Create new</a>
  </div>
{% endblock %}
